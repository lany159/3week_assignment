<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">


    <ImageView
        android:id="@+id/iv_woman"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/woman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:id="@+id/tv_id"
        app:layout_constraintEnd_toStartOf="@id/iv_woman"
        app:layout_constraintTop_toBottomOf="@id/iv_woman"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:typeface="serif"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:id="@+id/tv_pw"
        app:layout_constraintStart_toStartOf="@id/et_id"
        app:layout_constraintTop_toBottomOf="@id/et_id"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:typeface="serif"/>


    <EditText
        android:id="@+id/et_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="아이디를 입력해 주세요"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@id/tv_id"
        app:layout_constraintTop_toBottomOf="@id/tv_id" />



    <EditText
        android:id="@+id/et_pw"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="비밀번호를 입력해 주세요"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/tv_pw"
        app:layout_constraintTop_toBottomOf="@id/tv_pw" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:typeface="serif"
        android:background="#020202"
        android:textColor="@color/white"
        android:id="@+id/btn_login"
        app:layout_constraintStart_toStartOf="@id/et_pw"
        app:layout_constraintEnd_toEndOf="@id/et_pw"
        app:layout_constraintTop_toBottomOf="@id/et_pw"
        android:layout_marginTop="40dp"
        android:textSize="20sp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:typeface="serif"
        android:background="#020202"
        android:textColor="@color/white"
        android:id="@+id/btn_signup"
        app:layout_constraintStart_toStartOf="@id/btn_login"
        app:layout_constraintEnd_toEndOf="@id/btn_login"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>




</androidx.constraintlayout.widget.ConstraintLayout>